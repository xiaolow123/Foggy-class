@import './miniprogram_npm/weui-miniprogram/weui-wxss/dist/style/weui.wxss';
page {
  font-size:32rpx;
}

.container{
  display: flex;
  background-color:lightskyblue;
  flex-direction:column;
  align-items:center;
  position:absolute;
  left:0;
  right:0;
  top:0;
  bottom:0;

}

.avatar{
  width:200rpx;
  height:200rpx; 
  border-radius:50%;
  margin-top:200rpx;
}

.greet{
  font-weight:600;
  font-size:32rpx;
  margin-top:50rpx;
}


.button-container{
  border:2px #2299cc solid;
  font-size:20rpx;
  border-radius:7px;
  width:200rpx;
  height:75rpx;
  text-align:center;
  line-height:1.2;
  margin-top:300rpx;
}

.button{
 color:blueviolet;
 font-weight: bold;
}
