/* components/class/class.wxss */
.class-wrapper {
  display:flex;
  background-color:#33f;
  flex-direction: column;
  color:#fff;
  justify-content: center;
  margin:15rpx;
  border-radius: 12rpx;
}
.sub-wrapper {
  position:relative;
  margin:25rpx;
  display:flex;
  align-items:center;
}
.info, .teacher {
  position:absolute;
  right:0;
}
.teacher, .classDate {
  font-size:26rpx;
}
.classes {
  padding:15rpx 25rpx;
  background-color: aliceblue;
  color: #c9a;
  position: relative;
}
.class-entry {
  position: absolute;
  right:25rpx;
  top:50%;
  color:#6e5;
  transform: translateY(-50%);
  font-size:36rpx;
}