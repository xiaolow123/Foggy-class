/* pages/mine/mine.wxss */
.mine-wrapper {
  margin:35rpx
}
.userinfo {
  display: flex;
  margin-bottom:20rpx
}
.username {
  flex:1;
  font-size:32rpx;
  font-weight: bold
}
.myimage {
  flex:0 0 100rpx;
  height:100rpx;
  border-radius: 50%;
}
.edit {
  color:#aae;
  border-radius:12rpx;
  padding:12rpx;
  border:2px solid #aae;
  display:inline;
  font-size:26rpx;
}
.icons-wrapper {
  display:flex;
  flex-direction: column;
  font-size:32rpx;
  padding-top:60rpx;
  margin-top:35rpx;
  border-top:1px solid #ccc;
}
.icon-item {
  border-bottom:1px solid #ccc;
  height:50rpx;
  padding:20rpx;
  display:flex;
  align-items:center;
}
.icon-item image {
  height:90%;
  width:60rpx;
  margin-right:15rpx;
}
.link {
  flex:1;
  text-align:right;
}